<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <title>Update {{ stylist.getName }}</title>
    </head>
    <body>
        <div class = 'container'>
            <div class='jumbotron'>
                <h1>Update {{ stylist.getName }}</h1>
            </div>
        </div>

        <div class = 'container'>
            <form id="form_id" action="/stylist/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">

                <label for="name">Rename the stylist:</label>
                <input id="name" name="name" type="text">

                <button type="submit">Update</button>
            </form>

            <form action="/stylist/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit">Delete this stylist</button>
            </form>
        </div>
    </body>
</html>
