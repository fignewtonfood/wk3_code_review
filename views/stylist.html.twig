<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <title>{{ stylist.getName }}'s clients</title>
    </head>
    <body>
        <div class = 'container'>
            <div class='jumbotron'>
                <h1>{{ stylist.getName }}'s clients</h1>
            </div>
        </div>

        <div class = 'container'>
            {% if clients is not empty %}
                <p>Here are the clients:</p>
                <ul>
                    {% for client in clients %}
                        <li><a href="/client/{{ client.getId }}/edit">{{ client.getName }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There are no clients yet!</p>
            {% endif %}
        </div>

        <div class = 'container'>
            <h4>Add a client</h4>

            <form action="/clients" method="post">
                <input type="hidden" name="stylist_id" id="stylist_id" value="{{ stylist.getId() }}">
                <label for='name'>Client name</label>
                <input id='name' name='name' type='text' required>

                <button type='submit'>Add client</button>
            </form>
        </div>

        <footer class='footer'>
            <div class = 'container'>
                <form action='/delete_clients' method='post'>
                    <button type='submit'>Delete All Clients</button>
                </form>
            </div>

            <div class = 'container'>
                <form action='/stylist/{{ stylist.getId }}/edit' method='get'>
                    <button type='submit'>Edit this stylist</button>
                </form>
            </div>


            <div class = 'container'>
                <form action='/'>
                    <button type='submit'>Home</button>
                </form>
            </div>

        </footer>
    </body>
</html>
