<!-- CLIENT EDIT PAGE -->
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <title>Update {{ client.getName }}</title>
    </head>
    <body>
        <div class = 'container'>
            <div class='jumbotron'>
                <h1>Update {{ client.getName }}</h1>
            </div>
        </div>
<!-- Update Client c-r-U-d -->
        <div class = 'container'>
            <form id="form_id" action="/client/{{ client.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">

                <label for="name">Rename the client:</label>
                <input id="name" name="name" type="text">

                <button type="submit">Update</button>
            </form>
<!-- Delete Client c-r-u-D -->
            <form action="/client/{{ client.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit">Delete this client</button>
            </form>
        </div>
    </body>
</html>
